{
    "name": "DeepPDE-RL with GPU",
    "image": "nvcr.io/nvidia/pytorch:24.02-py3",
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance"
    ],
    "postCreateCommand": "pip install -e .",
    "remoteUser": "root"
}